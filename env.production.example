# ðŸš€ Odys Rental Management - Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Application Configuration
APP_NAME="Odys Rental Management"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://odys.ma

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=odys_rental_prod
DB_USERNAME=odys_rental_user
DB_PASSWORD=your_secure_password_here

# Session Configuration (File-based for production)
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Cache Configuration (File-based for production)
CACHE_STORE=file
CACHE_PREFIX=odys_rental

# Queue Configuration
QUEUE_CONNECTION=sync

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=noreply@odys.ma
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@odys.ma
MAIL_FROM_NAME="${APP_NAME}"

# AWS Configuration (if using S3 for backups)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# SaaS Configuration
SAAS_DOMAIN=odys.ma
SAAS_SUBDOMAIN_WILDCARD=*.odys.ma
SAAS_DEFAULT_PLAN=starter
SAAS_TRIAL_DAYS=14

# Tenant Configuration
TENANT_DATABASE_PREFIX=odys_tenant_
TENANT_DATABASE_SUFFIX=
TENANT_CACHE_PREFIX=tenant_cache

# Security Configuration
BCRYPT_ROUNDS=12
HASH_VERIFY=true

# Logging Configuration
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Performance Configuration
OPCACHE_ENABLE=true
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_INTERNED_STRINGS_BUFFER=8
OPCACHE_MAX_ACCELERATED_FILES=4000
OPCACHE_REVALIDATE_FREQ=2
OPCACHE_FAST_SHUTDOWN=1

# Image Storage Configuration
IMAGE_STORAGE_DISK=private_images
IMAGE_CACHE_TTL=3600
IMAGE_SIGNED_URL_TTL=60

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_DISK=local

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_ENABLED=true
PERFORMANCE_MONITORING=true

# SSL Configuration
FORCE_HTTPS=true
SECURE_COOKIES=true
SECURE_HEADERS=true

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI=/csp-report

# File Upload Configuration
MAX_FILE_SIZE=2048
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,svg,pdf,doc,docx

# Database Optimization
DB_STRICT_MODE=true
DB_ENGINE=InnoDB
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Redis Configuration (if using Redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Broadcasting Configuration
BROADCAST_DRIVER=log

# Filesystem Configuration
FILESYSTEM_DISK=local

# Horizon Configuration (if using queues)
HORIZON_BALANCE=auto
HORIZON_MAX_PROCESSES=1
HORIZON_TRIES=3
HORIZON_TIMEOUT=60

# Telescope Configuration (disable in production)
TELESCOPE_ENABLED=false

# Debugbar Configuration (disable in production)
DEBUGBAR_ENABLED=false

# Development Tools (disable in production)
TINKER_ENABLED=false
IDE_HELPER_ENABLED=false

# Custom Application Settings
RENTAL_APP_VERSION=1.0.0
RENTAL_MAINTENANCE_MODE=false
RENTAL_FEATURE_FLAGS=""

# Third-party Integrations
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Notification Configuration
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

# Social Login (if implemented)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=

# API Configuration
API_RATE_LIMIT=60
API_THROTTLE=60

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MODE_MESSAGE="We're performing scheduled maintenance. Please check back later."

# Error Reporting
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Custom Business Logic
DEFAULT_CURRENCY=MAD
DEFAULT_LANGUAGE=fr
TIMEZONE=Africa/Casablanca
DATE_FORMAT=d/m/Y
DATETIME_FORMAT=d/m/Y H:i:s

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
X_FRAME_OPTIONS=SAMEORIGIN
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION=1; mode=block

# Performance Headers
CACHE_CONTROL_MAX_AGE=31536000
ETAG_ENABLED=true
GZIP_COMPRESSION=true

# Database Connection Pooling
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30

# Session Security
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=strict

# File Upload Security
UPLOAD_VIRUS_SCAN=false
UPLOAD_QUARANTINE=false

# Backup Encryption
BACKUP_ENCRYPTION_KEY=
BACKUP_ENCRYPTION_CIPHER=AES-256-CBC

# Monitoring and Alerting
ALERT_EMAIL=admin@odys.ma
ALERT_SLACK_WEBHOOK=
ALERT_DISCORD_WEBHOOK=

# Feature Flags
FEATURE_MULTI_TENANT=true
FEATURE_ANALYTICS=true
FEATURE_REPORTS=true
FEATURE_API=true
FEATURE_WEBHOOKS=false

# Custom Business Rules
MAX_VEHICLES_PER_TENANT=100
MAX_USERS_PER_TENANT=50
MAX_RESERVATIONS_PER_DAY=1000
AUTO_APPROVE_RESERVATIONS=false
REQUIRE_EMAIL_VERIFICATION=true
REQUIRE_PHONE_VERIFICATION=false

# Integration Settings
SMS_PROVIDER=twilio
SMS_FROM_NUMBER=+1234567890
EMAIL_TEMPLATE_ENGINE=blade

# Custom Validation Rules
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
REQUIRE_UPPERCASE=true
REQUIRE_NUMBERS=true

# Application Limits
MAX_FILE_UPLOAD_SIZE=2048
MAX_IMAGE_DIMENSIONS=2048x2048
MAX_DOCUMENT_SIZE=10240
MAX_IMAGES_PER_VEHICLE=10

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_SHORT=300
CACHE_TTL_LONG=86400
CACHE_TTL_VERY_LONG=604800

# Database Indexing
DB_INDEX_OPTIMIZATION=true
DB_QUERY_LOG=false
DB_SLOW_QUERY_THRESHOLD=2000

# Application Performance
ENABLE_QUERY_CACHING=true
ENABLE_VIEW_CACHING=true
ENABLE_ROUTE_CACHING=true
ENABLE_CONFIG_CACHING=true

# Error Handling
ERROR_REPORTING_LEVEL=E_ERROR
LOG_ERRORS=true
LOG_QUERIES=false
LOG_SLOW_QUERIES=true

# Custom Application Settings
APPLICATION_MAINTENANCE=false
APPLICATION_DEBUG=false
APPLICATION_PROFILING=false
APPLICATION_MONITORING=true

# End of Production Environment Configuration
